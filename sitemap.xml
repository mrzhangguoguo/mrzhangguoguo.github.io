---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <!-- Homepage -->
  <url>
    <loc>{{ site.url }}/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>daily</changefreq>
    <priority>1.0</priority>
  </url>
  
  <!-- Static pages (About only) -->
  <url>
    <loc>{{ site.url }}/pages/about/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
  </url>
  
  <!-- Blog posts with English permalinks only -->
  {% for post in site.posts %}
    {% comment %}Only include posts that have explicit English permalinks set{% endcomment %}
    {% if post.permalink and post.permalink contains "/posts/" and post.permalink != "/posts/:slug/" %}
    <url>
      <loc>{{ site.url }}{{ post.url }}</loc>
      <lastmod>{{ post.date | date_to_xmlschema }}</lastmod>
      <changefreq>monthly</changefreq>
      <priority>0.7</priority>
    </url>
    {% endif %}
  {% endfor %}
  
  <!-- Episodes -->
  {% for episode in site.episodes %}
  <url>
    <loc>{{ site.url }}{{ episode.url }}</loc>
    <lastmod>{{ episode.date | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.6</priority>
  </url>
  {% endfor %}
</urlset>