---
layout: null
permalink: /podcast.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd" xmlns:content="http://purl.org/rss/1.0/modules/content/">
<channel>
  <title>{{ site.title | xml_escape }}</title>
  <link>{{ site.url }}{{ site.baseurl }}</link>
  <description>{{ site.description | xml_escape }}</description>
  <language>en</language>
  <managingEditor>{{ site.email | xml_escape }}</managingEditor>
  <webMaster>{{ site.email | xml_escape }}</webMaster>
  <copyright>{{ 'now' | date: "%Y" }} {{ site.title | xml_escape }}</copyright>
  <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
  <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
  <generator>Jekyll</generator>
  <ttl>60</ttl>
  
  <itunes:subtitle>{{ site.description | xml_escape }}</itunes:subtitle>
  <itunes:author>{{ site.title | xml_escape }}</itunes:author>
  <itunes:summary>{{ site.description | xml_escape }}</itunes:summary>
  <itunes:owner>
    <itunes:name>{{ site.title | xml_escape }}</itunes:name>
    <itunes:email>{{ site.email | xml_escape }}</itunes:email>
  </itunes:owner>
  <itunes:explicit>clean</itunes:explicit>
  <itunes:category text="Technology"/>
  
  {% assign episodes = site.episodes | where_exp: "episode", "episode.draft != true" | sort: "date" | reverse %}
  {% for episode in episodes limit: 50 %}
    <item>
      <title>{{ episode.title | xml_escape }}</title>
      <link>{{ site.url }}{{ site.baseurl }}{{ episode.url }}</link>
      <guid isPermaLink="true">{{ site.url }}{{ site.baseurl }}{{ episode.url }}</guid>
      <description><![CDATA[{{ episode.content | strip_html | truncate: 4000 }}]]></description>
      <content:encoded><![CDATA[{{ episode.content }}]]></content:encoded>
      {% if episode.published_at %}
        <pubDate>{{ episode.published_at | date_to_rfc822 }}</pubDate>
      {% else %}
        <pubDate>{{ episode.date | date_to_rfc822 }}</pubDate>
      {% endif %}
      {% if episode.audio_url %}
        <enclosure url="{{ episode.audio_url }}" type="audio/mpeg" length="0"/>
      {% endif %}
      {% if episode.duration_sec %}
        <itunes:duration>{{ episode.duration_sec }}</itunes:duration>
      {% endif %}
      <itunes:explicit>clean</itunes:explicit>
    </item>
  {% endfor %}
</channel>
</rss>